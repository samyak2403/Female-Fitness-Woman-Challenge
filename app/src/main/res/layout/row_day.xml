<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_margin="@dimen/_2dp">

    <RelativeLayout
        android:id="@+id/llImgTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_week_winner_cup"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2dp"
            android:background="@drawable/ic_week_round_line"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/_20sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/imgCompleteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2dp"
            android:src="@drawable/ic_week_done_big"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imgIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_toEndOf="@+id/llImgTxt"
        android:src="@drawable/ic_week_arrow_next_red" />

</RelativeLayout>
