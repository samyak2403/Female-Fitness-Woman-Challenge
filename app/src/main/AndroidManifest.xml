<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.arrowwould.womenhomeworkout">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.arrowwould.womenhomeworkout.common.AppControl"
        android:allowBackup="true"
        android:fullBackupOnly="false"
        android:fullBackupContent="false"
        tools:replace="android:allowBackup"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.arrowwould.womenhomeworkout.activity.BaseActivity" />

        <meta-data
            android:name="applovin.sdk.key"
            android:value="@string/sdkKey" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />

        <activity
            android:name="com.arrowwould.womenhomeworkout.activity.SetupPlanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.arrowwould.womenhomeworkout.activity.ReminderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.arrowwould.womenhomeworkout.activity.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.arrowwould.womenhomeworkout.activity.ReportActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.arrowwould.womenhomeworkout.activity.HistoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.arrowwould.womenhomeworkout.activity.WorkoutListInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.arrowwould.womenhomeworkout.activity.NextPrevDetailsWorkoutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.arrowwould.womenhomeworkout.activity.CompletedActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.arrowwould.womenhomeworkout.activity.ExerciseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.arrowwould.womenhomeworkout.activity.WorkoutListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_Workoutlist" />
        <activity
            android:name="com.arrowwould.womenhomeworkout.activity.DaysStatusActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_Workoutlist" />
        <activity
            android:name="com.arrowwould.womenhomeworkout.activity.WeeklyGoalSetActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.arrowwould.womenhomeworkout.activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:exported="true"
            android:name="com.arrowwould.womenhomeworkout.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.arrowwould.womenhomeworkout.common.MyBroadcastReceiver"
            android:enabled="true" />
        <receiver
            android:name="com.arrowwould.womenhomeworkout.reminderNew.AlarmReceiver"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedReceiver" />
        <receiver
            android:exported="true"
            android:name="com.arrowwould.womenhomeworkout.reminderNew.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.arrowwould.womenhomeworkout.pushnotification.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>

        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="true" />

    </application>
</manifest>
