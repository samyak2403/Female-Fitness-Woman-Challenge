<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Full screen theme -->
    <style name="styleFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:keepScreenOn">true</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Base application color white status bar -->
    <style name="styleStatusBarWhite" parent="Theme.AppCompat.Light.NoActionBar">
<!--        <item name="android:textColor">@color/colorBlack</item>-->
        <item name="android:keepScreenOn">true</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/colorWhite</item>

    </style>

    <style name="styleStatusBarThemeColor" parent="Theme.AppCompat.Light.NoActionBar">
<!--        <item name="android:textColor">@color/colorBlack</item>-->
        <item name="android:keepScreenOn">true</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@color/colorTheme</item>

    </style>

    <!-- <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item> -->
    <style name="customActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/none</item>
        <item name="android:activityCloseEnterAnimation">@anim/none</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>


    <style name="tv_title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">@dimen/_8dp</item>
        <item name="android:textSize">@dimen/_18sp</item>
    </style>

    <style name="tv_sub_Title">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:padding">@dimen/_8dp</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="tv_value">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:padding">@dimen/_8dp</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <!-- Dialog sound option -->
    <style name="dialog_sound_option_tv">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <style name="tv_health_data_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!-- Setting Screen Style -->
    <style name="setting_sub_Title">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="setting_tv_sub">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <!-- Common theme -->
    <style name="tv_action_bar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/_4dp</item>
        <item name="android:padding">@dimen/_0dp</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Home bottom controls -->
    <style name="tv_bottom_menu_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_0dp</item>
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="iv_bottom_menu_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_8dp</item>
        <item name="android:tint">@color/colorBlack</item>
    </style>

    <style name="tv_total_values">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_4dp</item>
        <item name="android:fontFamily">@font/oswald_bold</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">@color/colorTheme</item>
    </style>

    <style name="tv_total_values_bottom_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

</resources>
